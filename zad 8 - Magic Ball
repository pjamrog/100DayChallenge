import random


questions = ["it's certain","it's decidedly", "Without a doubt", "Yes definitely","You may rely on it", "As I see it, yes","Most likely", "Outlook good", "Yes", "Signs point to yes0", "Reply hazy try again","Ask again leter", "Better not tell you now", "Cannot predict now", "Concentrate and ask again", "Don't count on it","My reply is no","My sources say no","Outlook not so good","Very doubtful"]


print("Are you ready? Prepare your questions and answer for them should be only Yes or No.\n")

while True:
  your_question = input("Write your question: ")
  print("Magic Ball wants to tell you: %s" % random.choice(questions))
  next_question = input(" Do you want play once again ? Y / N \n")
  if next_question == "Y" or next_question == "y":
    pass
  elif next_question == "n" or next_question == "N":
    print("We are sorry that you don't want play more...")
    exit()
  else: 
    break
